set(CPAFT_INCLUDE_DIRS @CMAKE_INSTALL_PREFIX@/include)

set(CPAFT_LIBRARIES @CMAKE_INSTALL_PREFIX@/lib/libcpaft.so)

set(CPAFT_INCLUDE_PATH @CMAKE_INSTALL_PREFIX@/include) 

set(CPAFT_LIBDIR "${CMAKE_CURRENT_LIST_DIR}")

##### PASSING OPTION-VALUES AS FLAGS #####


if(@GHOST_CP@ STREQUAL "ON")
				set(CPAFT_FLAGS "${CPAFT_FLAGS} -DGHOST_CP")
endif()

if(@PHIST_CP@ STREQUAL "ON")
				set(CPAFT_FLAGS "${CPAFT_FLAGS} -DPHIST_CP")
endif()

if(@SCR@ STREQUAL "ON")
				set(CPAFT_FLAGS "${CPAFT_FLAGS} -DSCR")
				set (SCR_INCLUDE_PATH @SCR_INCLUDE_PATH@)
				include_directories("${SCR_INCLUDE_PATH}")
				set (SCR_LIBRARY_PATH @SCR_LIBRARY_PATH@)
				link_directories ("${SCR_LIBRARY_PATH}")
				set (SCR_LIBRARIES "${SCR_LIBRARY_PATH}/libscr.so")
				link_libraries (${SCR_LIBRARIES})
				message (STATUS "SCR_LIBRARIES: ${SCR_LIBRARIES}")
endif()

if(@AFT@ STREQUAL "ON")
				set(CPAFT_FLAGS "${CPAFT_FLAGS} -DAFT")
endif()

